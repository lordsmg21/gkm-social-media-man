{
  "name": "gkm-portal",
  "version": "1.0.0",
  "description": "GKM Portal - Social Media Management Platform",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "dev:setup": "./dev-setup.sh",
    "deploy:prod": "./deploy.sh",
    "deploy:stop": "docker-compose down",
    "deploy:logs": "docker-compose logs -f",
    "services:start": "docker-compose up -d",
    "services:stop": "docker-compose down",
    "services:restart": "docker-compose restart",
    "db:backup": "docker-compose exec postgres pg_dump -U gkm_user gkm_portal > backup-$(date +%Y%m%d).sql",
    "db:restore": "docker-compose exec -T postgres psql -U gkm_user gkm_portal < backup.sql"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "vite": "^7.1.3"
  }
}